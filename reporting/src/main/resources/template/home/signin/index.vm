#parse("/template/home/layout.vm")
#@mainLayout()

<!-- Main content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">

                    <div class="card-header text-center">
                        <b>Sign in</b> to start your session
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <form class="form-signin" action="/auth/sign-in" method="post">
                                    <button type="submit" class="btn btn-secondary btn-block">Demo - Sign in</button>
                                </form>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-success btn-block"
                                        onclick="window.location.href='/auth/sign-certificate'">Certificate - Sign in
                                </button>
                            </div>
                            <!-- /.col -->
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</div><!-- /.content -->

#end
